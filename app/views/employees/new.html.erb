<%= form_for @employee do |person_form| %>
  First Name: <%= person_form.text_field :first_name %>
  Last Name: <%= person_form.text_field :last_name %>
  Alias: <%= person_form.text_field :alias %>
  Title: <%= person_form.text_field :title %>
  Office: <%= person_form.text_field :office %>
  <%= person_form.collection_select :dog_id, Dog.all, :id, :name %>
  <%= person_form.submit %>
<% end %>